{
    "testEnvironment": "jsdom",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "^.+\\.js$": ["babel-jest", {
        "presets": ["@babel/env"],
        "plugins": ["@babel/plugin-transform-runtime"]
      }]
    },
    "transformIgnorePatterns": ["/node_modules/(.!passbolt-browser-extension)"],
    "setupFilesAfterEnv": ["<rootDir>/test/jest.setup.js"],
    "coverageReporters": [
      "cobertura",
      "html",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/**/*.test.js",
      "!src/**/*.test.data.js"
    ]
  }
  